# Environment
ENVIRONMENT=development

# API
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# OpenAI
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# PostgreSQL (with pgvector)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=consultorio_juridico
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-password-here

# MongoDB
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB=consultorio_juridico

# Redis (optional)
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-secret-key-change-in-production
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=10
MAX_ITERATIONS=3

# Quality Thresholds
MIN_QUALITY_SCORE=35
EVALUATION_TEMPERATURE=0.0

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Colombian Legal Compliance
DISCLAIMER_TEXT="La información es orientativa y no constituye asesoría legal profesional. Consulte un abogado para casos específicos."
